<h1>Editing User</h1>

<%= form_with(model: [:admins, @user]) do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% @client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username, class: "form-control" %>
  </div>

  <% @user.extra_information.each do |field, value| %>
	  <div class="form-group mt-3">
      <%= form.label field, field.humanize, style: "display: block" %>
      <%= form.text_field field, value: value, class: "form-control", disabled: true %>
    </div>
  <% end %>

  <div class="form-group mt-3">
    <%= form.submit 'Save', class: "btn btn-success" %>
  </div>
<% end %>
